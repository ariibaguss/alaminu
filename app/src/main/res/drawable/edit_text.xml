
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/biru" /> <!-- Set the pressed color -->
            <corners android:radius="8dp" /> <!-- Set the radius to control the roundness -->
            <stroke android:color="@android:color/darker_gray" android:width="1dp" /> <!-- Set the border color and width if needed -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" />
            <stroke android:color="@android:color/darker_gray" android:width="1dp" />
        </shape>
    </item>
</selector>
